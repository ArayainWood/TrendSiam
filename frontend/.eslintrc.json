{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    // Gradual improvement path: Convert non-critical lint errors to warnings
    // This allows CI to pass while we incrementally fix issues
    // Security-critical rules remain as errors
    
    // Allow unused vars as warnings (common in development/refactoring)
    "@typescript-eslint/no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "caughtErrorsIgnorePattern": "^_|^error$|^e$"
    }],
    
    // Allow explicit any with warning (should be fixed gradually)
    "@typescript-eslint/no-explicit-any": "warn",
    
    // Allow unescaped entities in JSX (cosmetic issue)
    "react/no-unescaped-entities": "warn",
    
    // Allow img tags (next/image optimization can be done gradually)
    "@next/next/no-img-element": "warn",
    
    // React hooks deps/rules still enforced (potential bugs)
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    
    // TypeScript strict rules (keep as warnings for gradual adoption)
    "@typescript-eslint/ban-ts-comment": "warn",
    "@typescript-eslint/no-require-imports": "warn",
    "prefer-const": "warn",
    
    // Next.js specific warnings
    "@next/next/no-head-element": "warn",
    "@next/next/no-assign-module-variable": "error",
    
    // Empty object types (cosmetic)
    "@typescript-eslint/no-empty-object-type": "warn"
  }
}
