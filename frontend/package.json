{
  "name": "trendsiam-frontend",
  "version": "1.0.0",
  "description": "Modern TrendSiam Frontend - Thai News Aggregation Platform",
  "private": true,
  "overrides": {
    "tar-fs": "2.1.4",
    "ws": "8.17.1",
    "dompurify": "3.2.4",
    "mermaid": "11.10.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:perms": "bash scripts/forbid_base_table_reads.sh",
    "type-check": "tsc --noEmit",
    "type-safety-check": "npm run type-check && npm run lint",
    "check-home-api": "tsx scripts/check-home.ts",
    "import-to-supabase": "tsx scripts/importToSupabase.ts",
    "import-test": "tsx scripts/importToSupabase.ts --test",
    "import-limited": "tsx scripts/importToSupabase.ts --limit=5",
    "import-with-incomplete": "tsx scripts/importToSupabase.ts --include-incomplete",
    "check:env:api": "node -e \"fetch('http://localhost:3000/api/env-check').then(r=>r.json()).then(j=>console.log(JSON.stringify(j,null,2))).catch(e=>console.error('Error:', e.message))\"",
    "check:env:api:3001": "node -e \"fetch('http://localhost:3001/api/env-check').then(r=>r.json()).then(j=>console.log(JSON.stringify(j,null,2))).catch(e=>console.error('Error:', e.message))\"",
    "check:env:node": "node scripts/env-test-node.cjs",
    "check:home": "node scripts/test-home-api.mjs",
    "check:view": "node scripts/test-home-api.mjs --view-only",
    "check:health": "node scripts/check-home-api.mjs",
    "check:home:curl": "curl -s http://localhost:3000/api/home | jq '.data | length'",
    "check:types": "tsc --noEmit",
    "check:all": "npm run db:guard && npm run check:types && npm run check:home",
    "db:inventory": "node scripts/generate-db-inventory.mjs",
    "db:guard": "node scripts/assert-schema-simple.mjs",
    "prepare": "cd .. && husky install frontend/.husky || git config core.hooksPath frontend/.husky",
    "scan:build:secrets": "node -e \"const fs=require('fs'),p='.next';if(!fs.existsSync(p)){console.log('Build directory not found. Run npm run build first.');process.exit(1);}let hit=false;function walk(d){for(const f of fs.readdirSync(d)){const fp=d+'/'+f;const s=fs.statSync(fp);if(s.isDirectory())walk(fp);else if(fp.endsWith('.js')||fp.endsWith('.json')){const t=fs.readFileSync(fp,'utf8');const key=process.env.SUPABASE_SERVICE_ROLE_KEY;if(key&&key.length>10&&t.includes(key)){hit=true;console.error('üö® SECURITY ISSUE: Service role key found in build file:',fp);}}}}walk(p);if(hit){console.error('‚ùå Build contains service role key! Check imports and fix.');process.exit(1);}else{console.log('‚úÖ Build scan passed: No service role key found in client bundle.');}\"",
    "verify:env": "npm run check:env:node && npm run check:env:api && npm run scan:build:secrets",
    "snapshot:check": "node -r ./scripts/loadEnv.cjs -e \"console.log('URL',!!process.env.SUPABASE_URL,'ROLE',!!process.env.SUPABASE_SERVICE_ROLE_KEY)\"",
    "snapshot:build:dry": "tsx -r ./scripts/loadEnv.cjs scripts/buildWeeklySnapshot.ts --dry-run",
    "snapshot:build": "tsx -r ./scripts/loadEnv.cjs scripts/buildWeeklySnapshot.ts",
    "snapshot:build:publish": "tsx -r ./scripts/loadEnv.cjs scripts/buildWeeklySnapshot.ts --publish",
    "snapshot:publish": "tsx -r ./scripts/loadEnv.cjs scripts/publishWeeklySnapshot.ts",
    "snapshot:test": "tsx -r ./scripts/loadEnv.cjs scripts/testSnapshotSystem.ts",
    "snapshot:test:count": "tsx -r ./scripts/loadEnv.cjs scripts/testWeeklyCount.ts",
    "snapshot:test:selection": "tsx -r ./scripts/loadEnv.cjs scripts/testWeeklySelection.ts",
    "test:pdf-overlap": "tsx scripts/testPdfOverlapFix.ts",
    "build:diagrams": "tsx scripts/build-diagrams.ts",
    "build:manual": "tsx scripts/buildSystemManual.tsx",
    "test:manual": "tsx scripts/testManualGeneration.ts",
    "db:apply-views": "echo 'üìÑ Apply SQL views manually:\\n1. Copy contents of frontend/db/sql/security/create_public_views.sql\\n2. Paste into Supabase SQL Editor\\n3. Run the script\\n4. Verify with: npm run db:test-views'",
    "db:test-views": "tsx -r ./scripts/loadEnv.cjs scripts/testDatabaseViews.ts",
    "db:debug-json": "tsx -r ./scripts/loadEnv.cjs scripts/debugJsonError.ts",
    "db:verify-fix": "tsx -r ./scripts/loadEnv.cjs scripts/verifyAndFixViews.ts",
    "db:test-query": "tsx -r ./scripts/loadEnv.cjs scripts/testDirectQuery.ts",
    "db:deep-diagnostic": "tsx -r ./scripts/loadEnv.cjs scripts/deepDiagnostic.ts",
    "db:inspect-table": "tsx -r ./scripts/loadEnv.cjs scripts/inspectNewsTable.ts",
    "db:test-simple-fix": "tsx -r ./scripts/loadEnv.cjs scripts/testSimpleFix.ts",
    "db:check-view-data": "tsx -r ./scripts/loadEnv.cjs scripts/checkViewData.ts",
    "db:test-repo": "tsx -r ./scripts/loadEnv.cjs scripts/testNewsRepoQuery.ts",
    "db:audit": "tsx -r ./scripts/loadEnv.cjs scripts/db-forensic-audit-phase1.ts",
    "db:clean:dry": "tsx -r ./scripts/loadEnv.cjs scripts/db-remediation-phase3.ts --dry-run",
    "db:clean:exec": "tsx -r ./scripts/loadEnv.cjs scripts/db-remediation-phase3.ts --execute"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@react-pdf/renderer": "^4.3.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.53.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "dayjs": "^1.11.13",
    "dompurify": "3.2.4",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.290.0",
    "mermaid": "11.10.0",
    "next": "^14.0.0",
    "next-themes": "^0.4.6",
    "playwright": "^1.56.1",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-intersection-observer": "^9.5.0",
    "tailwindcss": "^3.3.0",
    "tar-fs": "2.1.4",
    "typescript": "^5.0.0",
    "ws": "8.17.1",
    "zod": "^4.0.17",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.6.1",
    "@postgrestools/postgrestools": "^0.15.1",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "^24.2.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "server-only": "^0.0.1",
    "tsx": "^4.20.3"
  },
  "main": "next.config.js",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
